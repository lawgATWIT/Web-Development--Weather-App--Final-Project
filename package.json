{
  "name": "weather-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:web": "node server.js",
    "build": "electron-builder"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "electron": "^26.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.weatherapp",
    "productName": "WeatherNow",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**/*",
      "views/**/*",
      "routes/**/*",
      "main.js",
      "server.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A weather forecast app built with Electron and Node.js."
}
