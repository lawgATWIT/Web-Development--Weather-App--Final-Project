<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hourly Forecast | WeatherNow</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body class="">
    <header class="header">
        <nav class="navbar">
            <div class="logo">
                <img src="/images/sun.png" alt="Logo" class="logo-icon"> WeatherNow
            </div>
            <div class="nav-buttons">
                <a href="/" class="nav-btn<%= currentRoute === '/' ? ' active' : '' %>">Home</a>
                <a href="/hourly" class="nav-btn<%= currentRoute === '/hourly' ? ' active' : '' %>">Hourly</a>
                <a href="/#radar" class="nav-btn">Radar</a>
                <a href="/#alerts" class="nav-btn">Alerts</a>
                <a href="/#about" class="nav-btn">About</a>
                <button id="theme-toggle" class="theme-btn" aria-label="Toggle theme">
                    <span class="theme-icon">🌙</span>
                </button>
            </div>
        </nav>
    </header>

    <main class="main-container">
        <section class="weather-hero">
            <h1>Hourly Weather Forecast</h1>
            <p class="subtitle">24-hour outlook for Boston, MA</p>
        </section>

        <section class="hourly-section">
            <div class="hourly-scroll">
                <% hourlyForecast.forEach(data => { %>
                    <div class="hourly-card">
                        <div class="hour"><%= data.hour %></div>
                        <img src="/images/<%= data.condition %>.png" 
                             class="weather-icon" 
                             alt="<%= data.condition %>">
                        <div class="temp"><%= data.temperature %>°F</div>
                        <div class="condition"><%= data.condition %></div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>© 2025 WeatherNow. All rights reserved.</p>
            <p>Last updated: <span id="current-time"></span></p>
            <div class="social-links">
                <a href="#" aria-label="Twitter">𝕏</a>
                <a href="#" aria-label="Facebook">f</a>
                <a href="#" aria-label="Instagram">📷</a>
            </div>
        </div>
    </footer>

    <script src="/js/client.js"></script>
</body>
</html>